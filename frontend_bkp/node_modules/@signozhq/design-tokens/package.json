{
  "name": "@signozhq/design-tokens",
  "version": "1.1.4",
  "type": "module",
  "main": "./dist/design-tokens.js",
  "module": "./dist/design-tokens.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^8.0.0",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cssnano": "^7.0.6",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.0.0",
    "style-dictionary": "3.8.0",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist node_modules",
    "update-version": "changeset && changeset version",
    "release": "pnpm build && changeset publish",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.js",
    "format": "prettier --write .",
    "pre-commit": "lint-staged",
    "generate-tokens": "tsx ./scripts/generate-types-from-json.ts && style-dictionary build"
  }
}